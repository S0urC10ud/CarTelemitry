@page
@model CarTelemetry.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Typ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Typ)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.ModifiedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.ModifiedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Car.CarId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<h1>Associated Telemetry Data</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car.TelemetryData.ToList()[0].Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.TelemetryData.ToList()[0].Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.TelemetryData.ToList()[0].Speed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.TelemetryData.ToList()[0].Capacity)
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Car.TelemetryData.ToList().Where((element)=>element.CarId == Model.Car.CarId)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="/Telemetry/Index" asp-route-pageid="@Model.Car.CarId">Edit associated Data</a>
</div>